@model PONTO.WEB.Models.ClienteViewsModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

<h4 class="text-center mb-4">Ficha do Cliente</h4>
<hr />

<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pills-cliente-tab" data-toggle="pill" data-target="#pills-cliente" type="button" role="tab" aria-controls="pills-cliente" aria-selected="true">Cliente</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-contato-tab" data-toggle="pill" data-target="#pills-contato" type="button" role="tab" aria-controls="pills-contato" aria-selected="false">Contato</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-enderecos-tab" data-toggle="pill" data-target="#pills-enderecos" type="button" role="tab" aria-controls="pills-enderecos" aria-selected="false">Endereços</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-bots-tab" data-toggle="pill" data-target="#pills-bots" type="button" role="tab" aria-controls="pills-bots" aria-selected="false">Consutal Robôs</button>
    </li>
</ul>


<div class="tab-content col-12" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-cliente" role="tabpanel" aria-labelledby="pills-cliente-tab">
        <div class="container col-md-12 row">
            <div class="col-md-10">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Dados Principais</h3>
                    </div>
                <form asp-action="Edit">
                    <div class="card-body row">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Cliente.IdCliente" />

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Cliente.Nome" class="form-label"></label>
                                <input asp-for="Cliente.Nome" class="form-control" />
                                <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Cliente.CPF" class="form-label"></label>
                                <input asp-for="Cliente.CPF" class="form-control" />
                                <span asp-validation-for="Cliente.CPF" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Cliente.RG" class="form-label"></label>
                                <input asp-for="Cliente.RG" class="form-control" />
                                <span asp-validation-for="Cliente.RG" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Cliente.DataNascimento" class="form-label"></label>
                                <input asp-for="Cliente.DataNascimento" class="form-control" />
                                <span asp-validation-for="Cliente.DataNascimento" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Cliente.Aposentado" class="form-label"></label>
                                <input asp-for="Cliente.Aposentado" class="form-control" />
                                <span asp-validation-for="Cliente.Aposentado" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Cliente.NomeMae" class="form-label"></label>
                                <input asp-for="Cliente.NomeMae" class="form-control" />
                                <span asp-validation-for="Cliente.NomeMae" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Cliente.NomePai" class="form-label"></label>
                                <input asp-for="Cliente.NomePai" class="form-control" />
                                <span asp-validation-for="Cliente.NomePai" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Cliente.LocalNasc" class="form-label"></label>
                                <input asp-for="Cliente.LocalNasc" class="form-control" />
                                <span asp-validation-for="Cliente.LocalNasc" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Cliente.StatusCad" class="form-label"></label>
                                <input asp-for="Cliente.StatusCad" class="form-control" />
                                <span asp-validation-for="Cliente.StatusCad" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Cliente.DataCadastro" class="form-label"></label>
                                <input asp-for="Cliente.DataCadastro" class="form-control" />
                                <span asp-validation-for="Cliente.DataCadastro" class="text-danger"></span>
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">Atualizar</button>
                            </div>
                        </div>
                    </div>
                </form>
                </div>
                <div class="mt-3 text-center">
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
            </div>
        </div>


    </div>
    <div class="tab-pane fade" id="pills-contato" role="tabpanel" aria-labelledby="pills-contato-tab">


        <div class="container col-md-12 row">
                    
            <div class="col-md-6">
                    <div class="card-header">
                        <h3 class="card-title">Emails</h3>
                    </div>
                    <div class="card-body table-responsive p-0">
                    <table class="table table-bordered">
                            <thead>
                                <tr>                                   
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Data Cadastro</th>
                                    <th>Opção</th>
                                </tr>
                            </thead>
                            <tbody>                               
                                @for (int i = 0; i < Model.Emails.Count; i++)
                                {
                                    <tr>
                                        
                                  

                                    <form asp-action="Edit">
                                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                                        <input type="hidden" asp-for="Emails[i].IdEmail" />
                                        <input type="hidden" asp-for="Cliente.IdCliente" />

                                        <td><input asp-for="Emails[i].EmailCliente" class="form-control" /></td>
                                        <td>@Model.Emails[i].StatusEmail</td>
                                        <td>@Model.Emails[i].DataCadastro</td>
                                        <td><button type="submit" class="btn btn-sm btn-primary w-100">Atualizar</button></td>  

                                    </form>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

            
                </div>        
                
            <div class="col-md-6">
                    <div class="card-header">
                        <h3 class="card-title">Telefones</h3>
                    </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Data Cadastro</th>
                                <th>Opção</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Emails   .Count; i++)
                            {
                                <tr>



                                    <form asp-action="Edit">
                                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                                        <input type="hidden" asp-for="Emails[i].IdEmail" />
                                        <input type="hidden" asp-for="Cliente.IdCliente" />

                                    <td><input asp-for="Emails[i].EmailCliente" class="form-control" /></td>
                                    <td>@Model.Emails[i].StatusEmail</td>
                                    <td>@Model.Emails[i].DataCadastro</td>
                                    <td><button type="submit" class="btn btn-sm btn-primary w-100">Atualizar</button></td>

                                    </form>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>


            </div>         

        </div>

    </div>
    <div class="tab-pane fade" id="pills-enderecos" role="tabpanel" aria-labelledby="pills-enderecos-tab">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>UF</th>
                    <th>Cidade</th>
                    <th>Bairro</th>
                    <th>Rua</th>
                    <th>Cep</th>
                    <th>Número</th>
                    <th>Tipo</th>
                    <th>Status</th>
                    <th>Score</th>
                    <th>Data Cadastro</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enderecos in Model.Enderecos)
                {
                    <tr>
                        <td>@enderecos.Uf</td>
                        <td>@enderecos.Cidade</td>
                        <td>@enderecos.Bairro</td>
                        <td>@enderecos.Rua</td>
                        <td>@enderecos.Cep</td>
                        <td>@enderecos.Numero</td>
                        <td>@enderecos.Tipo</td>
                        <td>@enderecos.StatusEndereco</td>
                        <td>@enderecos.ScoreInterno</td>
                        <td>@enderecos.DataCadastro</td>
                    </tr>
                }
                @if (!Model.Emails.Any())
                {
                    <tr>
                        <td>Nenhum e-mail cadastrado.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="tab-pane fade" id="pills-bots" role="tabpanel" aria-labelledby="pills-bots-tab">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Últimas Consulta via bot</h3>
                        <div class="card-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body table-responsive p-0" style="height: 300px;">
                        <table class="table table-bordered table-responsive" style="overflow-x: auto;" .;lç>
                            <thead>
                                <tr>
                                    <th>ORGÃO</th>
                                    <th>TPVINCULO</th>
                                    <th>MBCONSIFACULTA</th>
                                    <th>MBCARTAOCREDITO</th>
                                    <th>MBCARTAOBENEF</th>
                                    <th>MDCONSIFACULTA</th>
                                    <th>MDCARTAOCREDITO</th>
                                    <th>MDCARTAOBENEF</th>
                                    <th>NUM_MATRICULA</th>
                                    <th>QTD_NUM_MAT</th>
                                    @* <th>MARGEM_5</th>
                                    <th>RESULTADO</th>
                                    <th>MENSAGEM_CONSIGNADO</th>
                                    <th>MENSAGEM_CARTAO_CREDITO</th> *@
                                    <th>DataConsulta</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var bost in Model.ResultadoBots)
                                {
                                    <tr>
                                        <td>@bost.ORGAO</td>
                                        <td>@bost.TPVINCULO</td>
                                        <td>@bost.MBCONSIFACULTA</td>
                                        <td>@bost.MBCARTAOCREDITO</td>
                                        <td>@bost.MBCARTAOBENEF</td>
                                        <td>@bost.MDCONSIFACULTA</td>
                                        <td>@bost.MDCARTAOCREDITO</td>
                                        <td>@bost.MDCARTAOBENEF</td>
                                        <td>@bost.NUM_MATRICULA</td>
                                        <td>@bost.QTD_NUM_MAT</td>
                                        @* <td>@bost.MARGEM_5</td>
                                    <td>@bost.RESULTADO</td>
                                    <td>@bost.MENSAGEM_CONSIGNADO</td>
                                    <td>@bost.MENSAGEM_CARTAO_CREDITO</td> *@
                                        <td>@bost.DataConsulta</td>
                                    </tr>
                                }
                                @if (!Model.Emails.Any())
                                {
                                    <tr>
                                        <td>Nenhum e-mail cadastrado.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
