@model PONTO.DOMAIN.Entidades.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1 class="my-4">Cadastrar Novo Cliente</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="CPF" class="form-label"></label>
                        <input asp-for="CPF" class="form-control" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="RG" class="form-label"></label>
                        <input asp-for="RG" class="form-control" />
                        <span asp-validation-for="RG" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Data de Nascimento</label>
                        <input asp-for="DataNascimento" class="form-control" />
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Aposentado" class="form-label"></label>
                        <input asp-for="Aposentado" class="form-control" />
                        <span asp-validation-for="Aposentado" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label aclass="form-label">Nome da Mãe</label>
                        <input asp-for="NomeMae" class="form-control" />
                        <span asp-validation-for="NomeMae" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Nome do Pai</label>
                        <input asp-for="NomePai" class="form-control" />
                        <span asp-validation-for="NomePai" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Local de Nascimento</label>
                        <input asp-for="LocalNasc" class="form-control" />
                        <span asp-validation-for="LocalNasc" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Status Cadastro</label>
                        <input asp-for="StatusCad" class="form-control" />
                        <span asp-validation-for="StatusCad" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end mt-4">
                <input type="submit" value="Cadastrar" class="btn btn-primary me-2" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
